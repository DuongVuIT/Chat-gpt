{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["./components/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"],
      "@constant/*": ["./constant/*"],
      "@navigation/*": ["src/navigation/*"],
      "@api/*": ["./api/*"]
    }
  }
}
